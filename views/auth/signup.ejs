<% include ../partials/_head.ejs %>

<section class="signup">
    <div class="banner">
        <p>SIGN UP FOR THE LATEST NEWS</p>
    </div>
    <div class="container">
            <p class="lead">Join our community to receive weekly highlights.</p>
            <small>Don't worry, we won't spam you.</small>
            <form action="/signup" method="POST">
                <div>
                    <label for="name">Full Name</label>
                    <input type="text" id="name" name="name" placeholder="First and Last Name (ex: John Smith)"
                        required />
                </div>
                <div>
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="ex: youremail@gmail.com" required />
                </div>
                <p class="aside">Our <a href="#">Privacy Policy</a></p>

                <button type="button" class="btn  signup-btn">SIGN UP</button>
            </form>
    </div>

</section>






